@{
    ViewBag.Title = "Admin UI";
}
<!-- Data Table -->
<table id="departmentTable" class="table table-striped table-hover table-responsive-lg border" style="margin-top:2%">
    <caption><strong>Department List</strong></caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Department Name</th>
            <th scope="col">Department Code</th>
            <th scope="col">Note</th>
            <th scope="col">
                <button type="button" class="newDepartment btn btn-primary small" data-toggle="modal">
                    <i class="fa fa-plus"></i>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<!-- Add/Edit Modal -->
@Html.Partial("Edit")

@section scripts{
    @Scripts.Render("~/bundles/department")
}