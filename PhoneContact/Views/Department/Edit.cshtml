<!-- Add/Edit Modal -->
<div class="modal" id="departmentEditModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title">Department Add/Edit</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="departmentForm" role="form">
                    @Html.AntiForgeryToken()
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="Id" name="Id">
                    </div>

                    <div class="form-group">
                        <label for="DepartmentName" class="col-form-label">Department Name<span class="text-danger"> *</span></label>
                        <input type="text" required class="form-control" id="DepartmentName" name="DepartmentName" maxlength="256">
                    </div>

                    <div class="form-group">
                        <label for="DepartmentCode" class="col-form-label">Department Code<span class="text-danger"> *</span></label>
                        <input type="text" required class="form-control" id="DepartmentCode" name="DepartmentCode" maxlength="32">
                    </div>

                    <div class="form-group">
                        <label for="DepartmentNote" class="col-form-label">Note</label>
                        <textarea class="form-control" name="DepartmentNote" id="DepartmentNote" maxlength="4096"></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveChanges" form="departmentForm">Save</button>
            </div>
        </div>
    </div>
</div>