@model List<PhoneContact.DataAccess.Concrete.DTO.User>
@{
    ViewBag.Title = "Admin UI";
}
<!-- Data Table -->
<table id="userTable" class="table table-striped table-hover table-responsive-lg border" style="margin-top:2%">
    <caption><strong>User List</strong></caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Nick Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var user in Model)
            {
                <tr>
                    <td class="userId">@user.Id</td>
                    <td class="userName">@user.UserName</td>
                    <td class="userLastName">@user.UserLastName</td>
                    <td class="userNickName">@user.UserNickName</td>
                    <td class="userPassword" hidden>@user.UserPassword</td>
                    <td class="userNote">@user.UserNote</td>
                    <td>
                        <button type="button" class="editUser btn btn-primary" data-toggle="modal" data-target="#userEditModal">
                            <i class="fa fa-edit"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Add/Edit Modal -->
@Html.Partial("Edit")

@section scripts{
    @Scripts.Render("~/bundles/user")
}