<div class="modal" id="userEditModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title">Edit</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="userForm" role="form">
                    @Html.AntiForgeryToken()
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="Id" name="Id">
                    </div>

                    <div class="form-group">
                        <label for="UserName" class="col-form-label">User Name<span class="text-danger"> *</span></label>
                        <input type="text" required class="form-control" id="UserName" name="UserName" maxlength="64">
                    </div>

                    <div class="form-group">
                        <label for="UserLastName" class="row-form-label">Last Name<span class="text-danger"> *</span></label>
                        <input type="text" required class="form-control" id="UserLastName" name="UserLastName" maxlength="64">
                    </div>

                    <div class="form-group">
                        <label for="UserPassword" class="row-form-label">Password<span class="text-danger"> *</span></label>
                        <input type="password" required class="form-control" id="UserPassword" name="UserPassword" minlength="4" maxlength="64">
                    </div>

                    <div class="form-group">
                        <label for="UserNickName" class="row-form-label">Nick Name<span class="text-danger"> *</span></label>
                        <input type="text" required class="form-control" id="UserNickName" name="UserNickName" maxlength="64">
                    </div>

                    <div class="form-group">
                        <label for="UserNote" class="col-form-label">Note</label>
                        <textarea class="form-control" name="UserNote" id="UserNote" maxlength="4096"></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveChanges" form="userForm">Save</button>
            </div>
        </div>
    </div>
</div>