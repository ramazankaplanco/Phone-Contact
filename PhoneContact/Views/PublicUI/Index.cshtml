@model List<PhoneContact.DataAccess.Concrete.DTO.Employee>
@{ var isAuthorized = Session["User"]?.ToString() != null;}
@{
    ViewBag.Title = "Public UI";
}
<!-- Data Table -->
<table class="table table-striped table-hover table-responsive-lg border" id="employeeTable" style="margin-top: 2%">
    <caption>
        <strong>Employee List</strong>
    </caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Note</th>
            @{
                if (isAuthorized)
                {
                    <th scope="col">
                        <button type="button" class="newEmployee btn btn-primary small" data-toggle="modal" data-target="#employeeEditModal">
                            <i class="fa fa-plus"></i>
                        </button>
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var employee in Model)
            {
                <tr>
                    <td class="employeeId">@employee.Id</td>
                    <td class="employeeName">@employee.EmployeeName</td>
                    <td class="employeeLastName">@employee.EmployeeLastName</td>
                    <td class="employeePhone">@employee.EmployeePhone</td>
                    <td class="employeeNote">@employee.EmployeeNote</td>
                    @{
                        if (isAuthorized)
                        {
                            <td>
                                <button type="button" class="editEmployee btn btn-info small" data-toggle="modal" data-target="#employeeEditModal">
                                    <i class="fa fa-edit"></i>
                                </button>

                                <button type="button" class="deleteEmployee btn btn-danger small">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        }
                        else
                        {
                            <td>
                                <!-- Button trigger modal -->
                                <button type="button" class="detailEmployee btn btn-info small" data-toggle="modal" data-target="#employeeDetailModal">
                                    <i class="fa fa-info-circle"></i>
                                </button>
                            </td>
                        }
                    }

                </tr>
            }
        }
    </tbody>
</table>
@{
    if (isAuthorized)
    {
        <!-- Add/Edit Modal -->
        @Html.Partial("Edit")
    }
    else
    {
        <!-- Detail Modal -->
        @Html.Partial("Detail")
    }
}
@section scripts{
    @Scripts.Render("~/bundles/employee")
}